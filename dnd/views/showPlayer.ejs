<script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>
<div class="header">
  <title>Your Monster</title>
</head>
<body>

  <%- include ('./partials/header.ejs') %>

  <nav class="navbar">
    <a href="/player"><i class="fa fa-fw fa-home"></i> Home</a> 
    <a href='/player/new'><i class="fa fa-plus"></i>  Add</a> 
    <a href="/player/<%=Player.id%>/edit"><i class="fa fa-edit"></i>Edit</a> 
    <a>
      <form action="/player/<%=Player.id%>?_method=DELETE" method="POST"><input id="deletebutton" type="submit" value="DELETE">
      </form>
    </a>
  </nav>

  

 <div class="playersheet">

  <div class="player-top-row">
  <div class="name">
    <h3>DUNGEONS AND DRAGONS</h3>
    <p><%=Player.name%></p>
    <p>CHARACTER NAME</p>
</div>

<div class="player-basic-info">
  <div class="player-sheet-row">
  <p><%=Player.basicInfo.class%></p>
