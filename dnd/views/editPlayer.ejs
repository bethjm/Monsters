  <input type="text" name="skills.investigation" value="<%=Player.skills.investigation%>">
<p>INVESTIGATION</p>
</div>
<div id="player-row">
  <input type="text" name="skills.medicine" value="<%=Player.skills.medicine%>">
<p>MEDICINE</p>
</div>
<div id="player-row">
  <input type="text" name="skills.nature" value="<%=Player.skills.nature%>">
<p>NATURE</p>
</div>
<div id="player-row">
  <input type="text" name="skills.perception" value="<%=Player.skills.perception%>">
<p>PERCEPTION</p>
</div>
<div id="player-row">
  <input type="text" name="skills.performance" value="<%=Player.skills.performance%>">
<p>PERFORMANCE</p>
</div>
<div id="player-row">
  <input type="text" name="skills.persuasion" value="<%=Player.skills.persuasion%>">
<p>PERSUASION</p>
</div>
<div id="player-row">
  <input type="text" name="skills.religion" value="<%=Player.skills.religion%>">
<p>RELIGION</p>
</div>
<div id="player-row">
  <input type="text" name="skills.sleightOfHand" value="<%=Player.skills.sleightOfHand%>">
<p>SLEIGHT OF HAND</p>
</div>
<div id="player-row">
  <input type="text" name="skills.stealth" value="<%=Player.skills.stealth%>">
<p>STEALTH</p>
</div>
<div id="player-row">
  <input type="text" name="skills.survival" value="<%=Player.skills.survival%>">
<p>SURVIVAL</p>
</div>
<div id="player-row">
  <input type="text" name="skills.passive" value="<%=Player.skills.passive%>">
<p>PASSIVE WISDOM/PERCEPTION </p>
</div>
</div>
</div>


<div class="personality">
<h4>PERSONALITY TRAITS</h4>
<p>TRAITS</p>
  <textarea class="player" type="text" name="personality.traits"  value="<%=Player.personality.traits%>" rows="4" cols="50"></textarea>
<p>IDEALS</p><br>
  <textarea class="player" type="text" name="personality.ideals"  value="<%=Player.personality.ideals%>" rows="4" cols="50"></textarea>
<p>BONDS</p><br>
  <textarea class="player" type="text" name="personality.bonds"  value="<%=Player.personality.bonds%>" rows="4" cols="50"></textarea>
<p>FLAWS</p><br>
  <textarea class="player" type="text" name="personality.flaws"  value="<%=Player.personality.flaws%>" rows="4" cols="50"></textarea>


</div>


<div class="notes">
  <h3>NOTES</h3><br>
  <textarea class="player" type="text" name="notes" value="<%=Player.notes%>" rows="4" cols="50"></textarea>
</div>
</div>
<input type="submit" value="Submit Player"><br>
</div>
</form>
</body>
</html>